<%- model_class = EmployeeWorkDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @employee_work_detail.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @employee_work_detail.status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_id) %>:</strong></dt>
  <dd><%= @employee_work_detail.designation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_class) %>:</strong></dt>
  <dd><%= @employee_work_detail.employee_class %></dd>
  <dt><strong><%= model_class.human_attribute_name(:join_date) %>:</strong></dt>
  <dd><%= @employee_work_detail.join_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pub_svc_comm_no) %>:</strong></dt>
  <dd><%= @employee_work_detail.pub_svc_comm_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pub_svc_comm_year) %>:</strong></dt>
  <dd><%= @employee_work_detail.pub_svc_comm_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recruitment_mode_id) %>:</strong></dt>
  <dd><%= @employee_work_detail.recruitment_mode_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_registration_number) %>:</strong></dt>
  <dd><%= @employee_work_detail.medical_registration_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_registration_date) %>:</strong></dt>
  <dd><%= @employee_work_detail.medical_registration_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:superannuation_date) %>:</strong></dt>
  <dd><%= @employee_work_detail.superannuation_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_work_details_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_work_detail_path(@employee_work_detail), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_work_detail_path(@employee_work_detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
