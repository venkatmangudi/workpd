<%- model_class = Achievement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @achievement.employee.emp_full_name %></dd>
  <dt><strong>Award :</strong></dt>
  <dd><%= @achievement.award_name %></dd>
  <dt><strong>Award Given By :</strong></dt>
  <dd><%= @achievement.award_given_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @achievement.details %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_path(@achievement.employee_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_achievement_path(@achievement), :class => 'btn' %>
</div>
