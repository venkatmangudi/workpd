<%- model_class = HospitalType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:hospital_type) %>:</strong></dt>
  <dd><%= @hospital_type.hospital_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @hospital_type.remarks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_datetime) %>:</strong></dt>
  <dd><%= @hospital_type.created_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_datetime) %>:</strong></dt>
  <dd><%= @hospital_type.updated_datetime %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hospital_types_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hospital_type_path(@hospital_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hospital_type_path(@hospital_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
