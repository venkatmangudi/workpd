<%= simple_form_for @employee_work_detail, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :employee_id %>
  <%= f.input :status_id %>
  <%= f.input :designation_id %>
  <%= f.input :employee_class %>
  <%= f.input :join_date %>
  <%= f.input :pub_svc_comm_no %>
  <%= f.input :pub_svc_comm_year %>
  <%= f.input :recruitment_mode_id %>
  <%= f.input :medical_registration_number %>
  <%= f.input :medical_registration_date %>
  <%= f.input :superannuation_date %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employee_work_details_path, :class => 'btn' %>
  </div>
<% end %>
