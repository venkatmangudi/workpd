<%= simple_form_for @achievement, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :employee,label_method: :emp_full_name, value_method: :id, include_blank: false, :as => :hidden%>
  <%= f.association :employee,label_method: :emp_full_name, value_method: :id, include_blank: false, disabled: true%>
  <%= f.input :award_name, label:'Award' %>
  <%= f.input :award_given_by ,label: 'Award Given By'%>
  <%= f.input :details %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employee_path(@achievement.employee_id), :class => 'btn' %>
  </div>
<% end %>
