  <tbody>
    <tr>
        <td><%= f.association :month,label_method: :month_name, value_method: :id, include_blank: false, :selected => 4%>
          </td>
        <td><%= f.input :year, collection: 1960..2050,include_blank: false, :selected => 2013 %> 

       <%= f.association :hospital,label_method: :hospital_name, value_method: :id, include_blank: false, :as => :hidden%>
