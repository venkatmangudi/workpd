<%- model_class = RecruitmentMode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:recruitment_mode) %>:</strong></dt>
  <dd><%= @recruitment_mode.recruitment_mode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_datetime) %>:</strong></dt>
  <dd><%= @recruitment_mode.created_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_userid) %>:</strong></dt>
  <dd><%= @recruitment_mode.created_userid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recruitment_modes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recruitment_mode_path(@recruitment_mode), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recruitment_mode_path(@recruitment_mode),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
