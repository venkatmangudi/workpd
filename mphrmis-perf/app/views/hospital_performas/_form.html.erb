  </tr>
  <tr>
    
      <td><%= f.input :major_surgery , label: ' Major Surgeries'%></td>
      <td><%= f.input :normal_delivery , label: ' Normal Delivery'%></td>
      <td><%= f.input :caesarion_delivery , label: ' Caesarian Delivery'%></td>
  </tr>
  <tr>

      
      <td><%= f.input :pathology , label: 'Pathology'%></td>
